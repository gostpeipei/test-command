
<h1>Invitations</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>E-mail</th>
    </tr>
  </thead>
  <tbody>
  {{#each model as |invitation|}}
    <tr>
      <td>{{invitation.id}}</td>
      <td>
      {{invitation.email}}
      <button {{action 'deleteInvitation' invitation}} class="btn btn-danger btn-xs pull-right">delete</button>
      </td>
    </tr>
  {{/each}}
  </tbody>
</table>

{{outlet}}
